        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.PageListActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.TableOfContentsActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.BookmarksActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.WebViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>