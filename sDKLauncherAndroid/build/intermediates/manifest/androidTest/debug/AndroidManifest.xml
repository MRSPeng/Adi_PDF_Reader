<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.readium.sdk.android.launcher.test" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="23" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for org.readium.sdk.android.launcher.test"
        android:targetPackage="org.readium.sdk.android.launcher.test" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="org.readium.sdk.android.launcher.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.ContainerList"
            android:label="@string/container_list_title" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.BookDataActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:parentActivityName="org.readium.sdk.android.launcher.ContainerList" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.MetaDataActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.SpineItemsActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.ListOfFiguresActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.ListOfIllustrationsActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.ListOfTablesActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.PageListActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.TableOfContentsActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.BookmarksActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.launcher.BookDataActivity" >
        </activity>
        <activity
            android:name="org.readium.sdk.android.launcher.WebViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>